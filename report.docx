            <h1 class="card-title">{{ post.title }}</h1>
            <p class="text-muted">By {{ post.author }} | {{ post.created|date:"F d, Y" }}</p>
            <hr>
            <div class="card-text">{{ post.content|linebreaks }}</div>
        </div>
    </div>
{% endblock %}
